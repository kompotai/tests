{
  "name": "kompot-e2e-tests",
  "version": "1.0.0",
  "description": "E2E test framework for Kompot business platform using Playwright",
  "scripts": {
    "test": "npx playwright test",
    "test:local": "npx playwright test",
    "test:stage": "doppler run --project kompot --config stage -- npx playwright test",
    "test:headed": "npx playwright test --headed",
    "test:ui": "npx playwright test --ui",
    "test:debug": "npx playwright test --debug",
    "test:setup": "FORCE_SETUP=true npx playwright test --project=company-owner",
    "test:setup:stage": "doppler run --project kompot --config stage -- env FORCE_SETUP=true npx playwright test --project=company-owner",
    "report": "npx playwright show-report",
    "codegen": "npx playwright codegen"
  },
  "keywords": [
    "playwright",
    "e2e",
    "testing",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.49.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^22.10.5",
    "@types/pdfkit": "^0.17.4",
    "dotenv": "^16.4.7",
    "mongodb": "^7.0.0",
    "pdf-lib": "^1.17.1",
    "pdfkit": "^0.17.2",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3"
  }
}
