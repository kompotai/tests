{
  "name": "kompot-e2e-tests",
  "version": "1.0.0",
  "description": "E2E test framework for Kompot business platform using Playwright",
  "scripts": {
    "test": "doppler run -- playwright test",
    "test:headed": "doppler run -- playwright test --headed",
    "test:ui": "doppler run -- playwright test --ui",
    "test:debug": "doppler run -- playwright test --debug",
    "test:chrome": "doppler run -- playwright test --project=chromium",
    "test:firefox": "doppler run -- playwright test --project=firefox",
    "test:webkit": "doppler run -- playwright test --project=webkit",
    "report": "doppler run -- playwright show-report",
    "codegen": "doppler run -- playwright codegen https://kompot-stage.up.railway.app/"
  },
  "keywords": [
    "playwright",
    "e2e",
    "testing",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.49.0",
    "@types/node": "^22.10.5",
    "dotenv": "^16.4.7",
    "typescript": "^5.7.3"
  }
}
